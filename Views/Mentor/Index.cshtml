@model IEnumerable<MOCP.Models.Mentor>

@{
    ViewData["Title"] = "Index";
}

<h1>Mentors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MentorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MentorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departments.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MentorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MentorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MentorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
